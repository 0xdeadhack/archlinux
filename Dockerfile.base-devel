FROM scratch
MAINTAINER ArchLinux Dockerimage Maintainers

ADD arch-rootfs/ /
ADD additional/ /

RUN    pacman-key --init \
    && pacman-key --populate archlinux \
    && pacman --noconfirm -Syu \
    && pacman --noconfirm -S base-devel \
    && rm -f \
      /var/cache/pacman/pkg/* \
      /var/lib/pacman/sync/* \
      /README \
      /etc/pacman.d/mirrorlist.pacnew
